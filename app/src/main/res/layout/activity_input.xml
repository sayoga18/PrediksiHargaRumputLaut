<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">


    <LinearLayout
        android:id="@+id/judul_atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/judul_halaman"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PREDIKSI HARGA RUMPUT LAUT"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_marginBottom="15dp"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul_atas">


            <LinearLayout
                android:id="@+id/judul_periode1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                
                <TextView
                    android:id="@+id/txt_periode1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PERIODE 1"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/periode1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Rp"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/judul_periode2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/judul_periode1">

                <TextView
                    android:id="@+id/txt_periode2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PERIODE 2"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/periode2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Rp"
                    android:inputType="numberDecimal" />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/judul_periode3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/judul_periode2">

            <TextView
                android:id="@+id/txt_periode3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PERIODE 3"
                android:textColor="#000"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/periode3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Rp"
                android:inputType="numberDecimal"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/judul_periode4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/judul_periode3">

            <TextView
                android:id="@+id/txt_periode4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PERIODE 4"
                android:textColor="#000"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/periode4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Rp"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/judul_periode5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/judul_periode4">

            <TextView
                android:id="@+id/txt_periode5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PERIODE 5"
                android:textSize="20dp"
                android:textColor="#000"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/periode5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Rp"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/judul_periode6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/judul_periode5">

            <TextView
                android:id="@+id/txt_periode6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PERIODE 6"
                android:textColor="#000"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/periode6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Rp"
                android:inputType="numberDecimal" />
        </LinearLayout>

            <Button
                android:onClick="cekHasil"
                android:id="@+id/btn"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/judul_periode6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PREDIKSI"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:background="@color/colorPrimary"/>
        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>

